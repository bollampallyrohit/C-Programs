#include <stdio.h>
int main()
{
    int num1, num2, quot, rem;
    printf("Enter the value of dividend: ");
    scanf("%d", &num1);
    printf("Enter the value of divisor: ");
    scanf("%d", &num2);
    quot= num1 / num2;
    rem= num1 % num2;
    printf("The quotient is %d", quot);
    printf("The reminder is %d", rem);
}
